<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trochoi.LevelBon">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:src="@drawable/chuongvang" />

    <TextView
        android:id="@+id/textviewdanhsachbaihoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:text="Level 4"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="366dp"
        android:layout_height="140dp"
        android:src="@drawable/backgroulevel4"></ImageView>

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_marginLeft="35dp"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:src="@drawable/hinhtronmaudolevel4"></ImageView>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/dauhoicham"></ImageView>

    <TextView
        android:textStyle="bold"
        android:layout_width="289dp"
        android:layout_height="98dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:text="Quả gì mà chua chua thế xin thưa rằng quả ......."
        android:textColor="#F6EFF6"
        android:textSize="25dp"></TextView>

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_width="355dp"
        android:layout_height="75dp"
        android:layout_marginTop="230dp"
        android:text="Điền vào chỗ trống trong câu hỏi trên!"
        android:textColor="#070707"
        android:textSize="25dp"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewlevelbon"
        android:layout_width="372dp"
        android:layout_height="256dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp" />
    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/traloilevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>




</RelativeLayout>