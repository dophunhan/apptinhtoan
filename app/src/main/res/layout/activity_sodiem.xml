<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8364FF"
    tools:context=".maugiao.SoDiemActivity">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewcacdangbaitap"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FAF8F8"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Số điểm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:background="@drawable/editn"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        android:layout_width="327dp"
        android:layout_height="138dp"
        android:layout_marginRight="24dp"

        >
    <TextView
        android:textColor="#FFDC64"
        android:gravity="center"
        android:textSize="96dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textviewchuso"
        ></TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewsodiem"
        android:layout_width="403dp"
        android:layout_height="331dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/recyclerviewsodiem"
        android:layout_width="271dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="Chạm vào các ô để nge phát âm nhé!"
        android:textSize="18dp"></TextView>


</RelativeLayout>