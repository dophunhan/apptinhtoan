<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#0E8595"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"

        android:src="@drawable/slideba"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Cùng học cùng nhận quà "
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="68dp"
        android:background="#44C1D1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đây là phần nội dung của giới thiệu ">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="được những phần quà hấp dẫn ">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="sau khi làm kiểm tra">

        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btntieptuc"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="Tiếp Tục"></Button>

</LinearLayout>