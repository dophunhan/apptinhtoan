<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".danhsachbaitap.Danhsachbaitapsomot">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView

        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewdanhsachbaihoc"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Danh sách bài học"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:text="Câu hỏi :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/bgrmautrang"></ImageView>
    <TextView
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:textSize="50dp"
        android:layout_marginTop="160dp"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:layout_marginLeft="140dp"
        android:textStyle="bold"
        android:textColor="#A39F98"
        android:textSize="50dp"
        android:layout_marginTop="160dp"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:layout_marginLeft="180dp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:textSize="50dp"
        android:layout_marginTop="160dp"
        android:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
    android:layout_marginLeft="250dp"
    android:textStyle="bold"
    android:textColor="#A39F98"
    android:textSize="50dp"
    android:layout_marginTop="160dp"
    android:text="="
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/dauhoichammaubac"
        android:textColor="#A39F98"
        android:textSize="70dp"
        android:textStyle="bold"></ImageView>
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="280dp"
        android:text="Chọn đáp án :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/recyclerviewdanhsachbaitapsomot"
        android:layout_marginTop="310dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/traloicauhoidanhsachbaitapsomot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerviewdanhsachbaitapsomot"
        android:src="@drawable/traloidanhsachbaitapsomot"></ImageView>
     <ImageView
         android:layout_centerHorizontal="true"
         android:layout_below="@id/traloicauhoidanhsachbaitapsomot"
         android:src="@drawable/quaylaidanhsachbaitapsomot"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         ></ImageView>

</RelativeLayout>