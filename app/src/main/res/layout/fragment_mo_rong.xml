<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoRongFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout

        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/imageluive"
            android:layout_margin="12dp"
            android:src="@drawable/imageluive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/chuongvang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_margin="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="#0B0A0A"
            android:textSize="20dp"
            android:text="chọn môn học"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>


        <ImageView
            android:id="@+id/lambaithi"
            android:layout_width="wrap_content"
            android:layout_height="110dp"

            android:layout_marginTop="85dp"
            android:src="@drawable/bmaucamcc"></ImageView>

        <ImageView
            android:id="@+id/hoctrungtam"
            android:layout_width="199dp"
            android:layout_height="110dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="85dp"
            android:layout_toRightOf="@+id/lambaithi"
            android:src="@drawable/bmautim"></ImageView>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:textColor="#FDFAFD"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Làm bài thi "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_marginLeft="250dp"
            android:layout_marginTop="120dp"
            android:textColor="#FDFAFD"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Học trung tâm "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#040404"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:textSize="20dp"
            android:text="Bảng xếp hạng :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>


        </RelativeLayout>

</FrameLayout>