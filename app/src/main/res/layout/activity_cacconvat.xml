<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maugiao.CacconvatActivity">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewcacdangbaitap"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Các con vật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <ImageView

        android:background="@drawable/editradio"
        android:layout_centerHorizontal="true"
        android:id="@+id/backgrouconvat"
        android:scaleType="centerCrop"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        android:layout_width="327dp"
        android:layout_height="180dp"
        android:layout_marginRight="24dp"

        >

    </ImageView>

    <TextView
        android:id="@+id/textviewconvat"
        android:layout_width="166dp"
        android:layout_height="70dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:gravity="center"

        android:textColor="#FFF"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewcacconvat"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_below="@+id/backgrouconvat"
        android:layout_marginTop="30dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>