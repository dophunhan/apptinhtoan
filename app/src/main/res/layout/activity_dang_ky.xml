<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DangKy">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:src="@drawable/hinhanhtrongcanhan"></ImageView>

    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/luivechucai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewcacdangbaitap"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FAF8F8"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Đăng ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/broudangkycanhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <TextView
        android:textColor="#FF5722"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <EditText
        android:id="@+id/Editname"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editdangnhap"
        ></EditText>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:text="Tên người dùng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        android:text="Mật khẩu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textColor="#FF5722"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <EditText
        android:id="@+id/Editmk"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editdangnhap"

        ></EditText>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="370dp"
        android:textSize="20dp"
        android:text="Nhập lại mật khẩu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textColor="#FF5722"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="370dp"
        android:textSize="20dp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <EditText
        android:id="@+id/Editnhaplaimk"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editdangnhap"

        ></EditText>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textColor="#FF5722"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <EditText
        android:id="@+id/Editemail"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editdangnhap"

        ></EditText>
    <Button
        android:id="@+id/btndangkytk"
        android:layout_marginTop="570dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Đăng ký"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editbtndangky"

        ></Button>

</RelativeLayout>