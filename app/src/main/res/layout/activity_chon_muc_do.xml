<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChonMucDo">
    <ImageView

        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView

        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Chọn mức độ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginLeft="33dp"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:text="bước 2 ,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textStyle="bold"
        android:textColor="#090909"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="120dp"
        android:textSize="28dp"
        android:text="Chọn một mức độ ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <ImageView
        android:id="@+id/mucdode"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mucdode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <ImageView
        android:id="@+id/mucdotrungbinh"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mucdotrungbinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <ImageView
        android:id="@+id/mucdokho"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mucdokho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>

</RelativeLayout>