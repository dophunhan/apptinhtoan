<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeBlankFragment">
    <RelativeLayout
        android:id="@+id/relativelayoutrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView

            android:id="@+id/imageluivecacdangbaitap"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menumain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/chuongvang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textviewblowrecyc"
            android:layout_margin="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Chọn lớp học"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:background="@color/colormauxanh"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textviewblowrecyc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            ></View>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textviewblowrecyc"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/imageluive"
            android:layout_margin="12dp"
            android:src="@drawable/imageluive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/chuongvang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_margin="12dp"
             android:layout_centerHorizontal="true"
            android:textColor="#0B0A0A"
            android:id="@+id/textviewretivatelayout"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Chọn môn học"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/xinchao"
            android:layout_marginTop="80dp"
            android:textSize="16dp"
            android:text="Xin chào,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="30dp"
            android:textSize="25dp"
            android:id="@+id/homnayhocgi"
            android:textColor="#0C0C0C"
            android:text="Hôm nay học gì ?"
            android:layout_below="@+id/xinchao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:background="@color/colormauxanh"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textviewretivatelayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            ></View>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/hoctoan"
            android:src="@drawable/hoctoan"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/homnayhocgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/hoctiengviet"
            android:src="@drawable/tiengviet"
            android:layout_below="@+id/hoctoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/tienganh"

            android:layout_below="@+id/hoctiengviet"
            android:id="@+id/hoctienganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></ImageView>

    </RelativeLayout>

</FrameLayout>