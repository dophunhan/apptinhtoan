<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LamBaiThi">
    <ImageView

        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView

        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Làm bài thi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Chronometer
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:countDown="true"
        android:textSize="20dp"
        android:id="@+id/view_timer"
        tools:targetApi="24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:textColor="#0B0A0A"
        android:textStyle="bold"
        android:text="Thời gian còn lại ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewlambaithi"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_marginTop="140dp"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>