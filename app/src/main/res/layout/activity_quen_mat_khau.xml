<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuenMatKhau">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:src="@drawable/hinhanhtrongcanhan"></ImageView>
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/luivechucai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewcacdangbaitap"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FAF8F8"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Quên mật khẩu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/brouquenmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <TextView
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textColor="#FF5722"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <EditText
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editdangnhap"
        ></EditText>
    <Button
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Lấy lại mật khẩu"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:background="@drawable/editbtndangnhap"

        ></Button>


</RelativeLayout>