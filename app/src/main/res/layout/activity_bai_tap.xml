<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".danhsachbaitap.BaiTapActivity">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView

        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Danh sách bài tập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="100dp"
        android:text="Lời nhắc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:textColor="#0C0C0C"
        android:layout_marginTop="120dp"
        android:textSize="25dp"
        android:text="Hãy hoàn thành các bài tập để tích điểm đổi quà nhé?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewbaitap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="200dp"
        ></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>