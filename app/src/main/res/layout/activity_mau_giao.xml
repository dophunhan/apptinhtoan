<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maugiao.MauGiaoActivity">
    <ImageView
        android:id="@+id/imageluivemaugiao"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textviewblowrecyc"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#0B0A0A"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Mẫu giáo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:background="@color/colormauxanh"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textviewblowrecyc"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        ></View>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerviewmaugiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"></androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>