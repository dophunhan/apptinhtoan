<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A875EA"
    tools:context=".maugiao.giaotiep">
    <ImageView
        android:id="@+id/imageluivecacdangbaitap"
        android:layout_margin="12dp"
        android:src="@drawable/imageluive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chuongvang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewcacdangbaitap"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Giao tiếp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />




    <ImageView
        android:layout_marginTop="33dp"
        android:id="@+id/imagemot"
        android:layout_below="@+id/textviewcacdangbaitap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/giaotiepmot"></ImageView>
    <ImageView
        android:id="@+id/imagehai"
        android:layout_marginTop="33dp"
        android:src="@drawable/giaotiephai"
        android:layout_below="@+id/textviewcacdangbaitap"
        android:layout_toRightOf="@+id/imagemot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <ImageView

        android:id="@+id/imageba"
        android:layout_below="@+id/imagemot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/giaotiepba"></ImageView>
    <ImageView
        android:id="@+id/imagebon"

        android:src="@drawable/giaotiepbon"
        android:layout_below="@+id/imagehai"
        android:layout_toRightOf="@+id/imageba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
    <ImageView

        android:id="@+id/imagenam"
        android:layout_below="@+id/imageba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/giaotiepnam"></ImageView>
    <ImageView
        android:id="@+id/imagesau"

        android:src="@drawable/giaotiepsau"
        android:layout_below="@+id/imagebon"
        android:layout_toRightOf="@+id/imagenam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>

    <TextView
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagesau"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Chạm vào mỗi hình ảnh để nge các đoạn hội thoại"
        android:textSize="18dp"></TextView>


</RelativeLayout>